{
  "name": "web-skeleton",
  "version": "1.0.0",
  "description": "ECP skeleton for React/Redux web application",
  "scripts": {
    "build": "NODE_ENV=production ./node_modules/webpack/bin/webpack.js --config ./webpack.prod.config.js --progress --profile --colors",
    "snapshots": "jest -u",
    "lint": "eslint ./src",
    "test": "jest",
    "start": "node prod.js",
    "dev-start": "node server.js",
    "heroku-postbuild": "npm run build"
  },
  "author": "ECP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EastCoastProduct/web-skeleton"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-jest": "^17.0.0",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.9.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "express": "^4.14.0",
    "fetch-mock": "^5.5.0",
    "file-api": "^0.10.4",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.24.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^17.0.0",
    "node-sass": "^4.5.3",
    "postcss-js": "^0.1.3",
    "postcss-loader": "^1.1.1",
    "postcss-scss": "^1.0.2",
    "react-addons-test-utils": "^15.3.2",
    "react-test-renderer": "^15.3.2",
    "redux-mock-store": "^1.2.1",
    "regenerator-runtime": "^0.11.0",
    "sass-loader": "^6.0.6",
    "sass-resources-loader": "^1.2.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "dependencies": {
    "babel-plugin-react-css-modules": "^2.8.0",
    "babel-polyfill": "^6.16.0",
    "draft-js": "^0.9.1",
    "es6-promise": "^4.0.5",
    "font-awesome": "^4.7.0",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^5.0.6",
    "react-router": "^3.0.0",
    "react-select": "^1.0.0-rc.10",
    "redux": "^3.7.2",
    "redux-form": "7.0.4",
    "redux-thunk": "^2.2.0",
    "store": "^1.3.20",
    "validator": "^6.1.0",
    "whatwg-fetch": "^1.0.0"
  },
  "engines": {
    "node": ">=6.7 <7"
  },
  "jest": {
    "cacheDirectory": "../test/cache",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!setupTests.js",
      "!**/styles.js",
      "!**/styles/**",
      "!**/routes/**"
    ],
    "coverageDirectory": "../test/coverage",
    "coverageThreshold": {
      "global": {
        "statements": 90
      }
    },
    "globals": {
      "__API_URL__": "http://localhost:3000"
    },
    "setupFiles": [
      "./setupTests.js"
    ],
    "testEnvironment": "node",
    "testRegex": "^.*test.*\\.js$",
    "timers": "fake",
    "rootDir": "src",
    "moduleNameMapper": {
      "\\.js$": "babel-jest",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
